<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TimeBasedAccounting.UI.TimesheetView">
	
	<StackPanel Margin="8">
		<TextBlock Text="Табель" FontSize="18"/>
		<DataGrid Items="{Binding Rows}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}"/>
				<DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
				<DataGridTextColumn Header="Часы" Binding="{Binding HoursWorked}"/>
				<DataGridTextColumn Header="Мarker" Binding="{Binding MarkerCode}"/>
			</DataGrid.Columns>
		</DataGrid>
	</StackPanel>
	
</UserControl>
