<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TimeBasedAccounting.UI.LoginView"
        Title="LoginView">
	
	<StackPanel Margin="16" Spacing="8">
		<TextBlock Text="Табельный учет" FontSize="20" HorizontalAlignment="Center"/>
		<TextBox Watermark="Login" Text="{Binding Login, Mode=TwoWay}"/>
		<PasswordBox Password="{Binding Password, Mode=TwoWay}"/>
		<Button Command="{Binding LoginCommand}" Content="Войти"/>
		<TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
	</StackPanel>
	
</Window>
