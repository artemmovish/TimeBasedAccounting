<Window x:Class="TimeSheet.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeSheet.Windows"
        mc:Ignorable="d"
        Title="Вход в систему" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f5f5f5">

    <Grid Margin="30" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Вход в систему" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,30"
                   Foreground="#2C3E50"/>

        <!-- Выбор пользователя -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Пользователь" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#34495E"/>
            <ComboBox x:Name="UsersComboBox"
                      ItemsSource="{Binding Users}"
                      SelectedItem="{Binding SelectedUser}"
                      Height="35" FontSize="14"
                      IsEnabled="{Binding IsUserSelectionEnabled}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FullName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Логин -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Логин" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#34495E"/>
            <TextBox x:Name="LoginTextBox"
                     Text="{Binding Login}" 
                     Height="35" FontSize="14" 
                     IsEnabled="{Binding IsManualLoginEnabled}"
                     Padding="5"/>
        </StackPanel>

        <!-- Пароль -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Пароль" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#34495E"/>
            <PasswordBox x:Name="PasswordBox" 
                         Height="35" FontSize="14"
                         IsEnabled="{Binding IsManualLoginEnabled}"
                         Padding="5"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <Border Grid.Row="4" 
                Background="#FFEBEE" 
                BorderBrush="#F44336" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,15"
                Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#C62828" 
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Войти" 
                    Command="{Binding LoginCommand}"
                    Padding="20,10" 
                    Background="#3498DB" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="SemiBold"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            <Button Content="Сброс" 
                    Command="{Binding ResetCommand}"
                    Padding="20,10" 
                    Background="#95A5A6" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>