<Window x:Class="TimeSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeSheet.ViewModels"
        xmlns:views="clr-namespace:TimeSheet.Views"
        mc:Ignorable="d"
        Title="Система учета рабочего времени" Height="600" Width="900">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:TimesheetViewModel}">
            <views:TimesheetView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:EmployeesViewModel}">
            <views:EmployeesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:VacationsViewModel}">
            <views:VacationsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ReportsViewModel}">
            <views:ReportsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="TimeSheet" Foreground="White" 
                          FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" Text="{Binding CurrentUser}" 
                          Foreground="White" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation -->
            <Border Grid.Column="0" Background="#34495E">
                <StackPanel Margin="10">
                    <Button Content="📊 Табель" Command="{Binding NavigateCommand}" 
                            CommandParameter="timesheet" 
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="👥 Сотрудники" Command="{Binding NavigateCommand}" 
                            CommandParameter="employees"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="🏖️ Отпуска" Command="{Binding NavigateCommand}" 
                            CommandParameter="vacations"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="📈 Отчеты" Command="{Binding NavigateCommand}" 
                            CommandParameter="reports"
                            Style="{StaticResource NavigationButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>
        </Grid>
    </Grid>
</Window>